@model VideoChaptersViewModel

@{
    ViewData["Title"] = "Create Video Chapters";
    var videoName = Model.VideoName;
    var videoDuration = Model.VideoDuration;
}

<div class="container mt-5">
    <h2 class="mb-4">Create Video Chapters for @videoName</h2>

    <p>Video Duration: @videoDuration seconds</p>

    <form method="post" action="/Video/CreateChapters">
        <input type="hidden" name="videoName" value="@videoName" />

        <div class="mb-4">
            <label for="chaptersDescription" class="form-label">Enter Chapters (format: <em>0:00 Chapter Title</em>)</label>
            <textarea id="chaptersDescription" name="chaptersDescription" class="form-control" rows="10"
                      placeholder="0:00 What are video chapters?&#10;2:31 How to try them out&#10;5:00 Tips"
                      required></textarea>
        </div>
        <input type="hidden" name="videoLength" value="@videoDuration" />

        <button type="submit" class="btn btn-success">Submit Chapters</button>
    </form>
</div>
