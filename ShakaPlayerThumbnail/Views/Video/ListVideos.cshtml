@using System.Web
@model IEnumerable<ShakaPlayerThumbnail.Data.Video>

@{
    ViewData["Title"] = "Video List";
}

<div class="container mt-5">
    <h2 class="mb-4">Uploaded Videos</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Video Title</th>
                <th scope="col">File Name</th>
                <th scope="col">Upload Date</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var video in Model)
            {
                <tr>
                    <td>@video.Name</td>
                    <td>@video.FileName</td>
                    <td>@video.UploadDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @if (video.IsProcessing)
                        {
                            <span>Processing...</span>
                            <div class="progress">
                                <div class="progress-bar" id="progress-@HttpUtility.UrlPathEncode(video.FileName)" role="progressbar" style="width: @video.Progress%;" aria-valuenow="@video.Progress" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        }
                        else
                        {
                            <span>Processing complete</span>
                        }
                    </td>
                    <td>
                        <!-- The display button is always visible, but disabled during processing -->
                        <a href="@Url.Action("DisplayVideo", "Video", new { videoName = video.FileName })"
                           class="btn btn-secondary mt-3 @(!video.IsProcessing ? "" : "disabled")"
                           id="btn-display-@HttpUtility.UrlPathEncode(video.FileName)">
                           Display Video
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No videos uploaded yet.</div>
        <a href="@Url.Action("Upload", "Video")" class="btn btn-secondary mt-3">Upload Your First Video</a>
    }
</div>
